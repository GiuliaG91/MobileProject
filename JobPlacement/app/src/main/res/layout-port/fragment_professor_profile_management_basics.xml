<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frag_professor_profile_management_basics"
    tools:context="com.example.giuliagigi.jobplacement.ProfessorProfileManagementBasicsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:id="@+id/basics_profile_photo_container">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_photo_height_port"
                    android:background="@drawable/user_icon"
                    android:scaleType="centerCrop"
                    android:id="@+id/basics_profilePhoto"/>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:weightSum="1"
                    android:paddingBottom="20dp"
                    android:id="@+id/basics_name_surname_container">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_weight=".9">

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/profile_person_fragment_name_title"
                            android:id="@+id/professor_name_area"
                            android:backgroundTint="@color/blue_semi_transparent"
                            android:textCursorDrawable="@drawable/edit_cursor"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:background="#00000000"
                            android:paddingBottom="5dp"
                            android:textColor="#ffffff" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/profile_person_fragment_surname_title"
                            android:gravity="bottom"
                            android:background="#00000000"
                            android:id="@+id/professor_surname_area"
                            android:backgroundTint="@color/blue_semi_transparent"
                            android:textCursorDrawable="@drawable/edit_cursor"
                            android:paddingLeft="10dp"
                            android:textColor="#ffffff"
                            android:paddingTop="5dp" />
                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/profile_edit_button"

                        />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="0.7">

                <!-- email area -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rowIcon"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_email"
                        android:layout_gravity="bottom"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:paddingLeft="30dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/profile_person_fragment_email_title"
                            android:textColor="@color/ColorPrimaryDark"
                            android:id="@+id/email_hint"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:gravity="bottom"
                            android:textSize="10sp" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:id="@+id/basics_email_area"
                            android:layout_weight="1"
                            android:textColor="#ff000000"
                            android:background="#00000000"
                            android:backgroundTint="@color/blue_semi_transparent"
                            android:textCursorDrawable="@drawable/edit_cursor"
                            android:textSize="20dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:enabled="false"/>

                    </LinearLayout>


                </LinearLayout>

                <!-- end email area -->

                <!-- consulenza -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/consIcon"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_schedule"
                        android:layout_gravity="bottom"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:paddingLeft="30dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/professor_consulting_title"
                            android:textColor="@color/ColorPrimaryDark"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:gravity="bottom"
                            android:textSize="10sp" />

                        <Spinner
                            android:id="@+id/lecture_day_editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp">

                            <EditText
                                android:id="@+id/consulting_startHour_editText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="#000000"
                                android:backgroundTint="@color/blue_semi_transparent"
                                android:textCursorDrawable="@drawable/edit_cursor"
                                android:textSize="@dimen/editText_textSize" />

                            <TextView
                                android:text=":"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/editText_textSize" />


                            <EditText
                                android:id="@+id/consulting_startMinute_editText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="#000000"
                                android:backgroundTint="@color/blue_semi_transparent"
                                android:textCursorDrawable="@drawable/edit_cursor"
                                android:textSize="@dimen/editText_textSize"  />

                            <TextView
                                android:text="-"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/editText_textSize"  />

                            <EditText
                                android:id="@+id/consulting_endHour_editText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="#000000"
                                android:backgroundTint="@color/blue_semi_transparent"
                                android:textCursorDrawable="@drawable/edit_cursor"
                                android:textSize="@dimen/editText_textSize"  />

                            <TextView
                                android:text=":"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/editText_textSize"  />

                            <EditText
                                android:id="@+id/consulting_endMinute_editText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="#000000"
                                android:backgroundTint="@color/blue_semi_transparent"
                                android:textCursorDrawable="@drawable/edit_cursor"
                                android:textSize="@dimen/editText_textSize"  />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <!-- fine consulenza -->

                <!-- gender area -->
                <LinearLayout
                    android:orientation="horizontal" android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/genderIcon"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_gender"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:paddingLeft="30dp">



                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/profile_person_fragment_sex_title"
                            android:paddingLeft="10dp"
                            android:textColor="@color/ColorPrimaryDark"
                            android:id="@+id/container_sex_hint"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="F"
                                android:layout_weight="1"
                                android:id="@+id/female_checkBox"
                                android:textColor="@color/ColorPrimaryDark"
                                android:buttonTint="@color/ColorPrimary"
                                android:layout_gravity="center_horizontal" />
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="M"
                                android:layout_weight="1"
                                android:textColor="@color/ColorPrimaryDark"
                                android:id="@+id/male_checkBox"
                                android:layout_gravity="center_horizontal" />



                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <!-- end gender area -->

                <!-- date area -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/birth_icon"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_birth"
                        android:layout_gravity="bottom"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:paddingLeft="30dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/profile_person_fragment_birth_title"
                            android:id="@+id/birth_hint"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:textColor="@color/ColorPrimaryDark"
                            android:gravity="bottom"
                            android:textSize="10sp" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:id="@+id/professor_birth_et"
                            android:layout_weight="1"
                            android:textColor="#ff000000"
                            android:background="#00000000"
                            android:textSize="20dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp" />

                    </LinearLayout>


                </LinearLayout>

                <!-- end date area -->

                <!-- birth city area -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/birth_city_icon"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_birthcity"
                        android:layout_gravity="bottom"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:paddingLeft="30dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/profile_person_fragment_birth_city_title"
                            android:id="@+id/professor_birthCity_hint"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:textColor="@color/ColorPrimaryDark"
                            android:gravity="bottom"
                            android:textSize="10sp" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:id="@+id/professor_birthCity_et"
                            android:layout_weight="1"
                            android:textColor="#ff000000"
                            android:background="#00000000"
                            android:textSize="20dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp" />

                    </LinearLayout>


                </LinearLayout>

                <!-- end birth city area -->

                <!-- verified -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/account_verified"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_confirm"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/string_account_verified"
                            android:textColor="@color/ColorPrimaryDark"
                            android:id="@+id/account_verified_tv"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="15dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/account_verified_icon"
                            android:paddingLeft="10dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_cross"
                            android:layout_gravity="center_vertical"/>


                    </LinearLayout>


                </LinearLayout>
                <!-- end verified -->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
