<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degree_border"
    android:alpha="1"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/address_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="5dp"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <!-- Address and cap -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addressIcon"
                    android:src="@drawable/ic_map"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".6"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/string_company_fragment_address"
                        android:textColor="@color/ColorPrimaryDark"
                        android:id="@+id/office_address_field"
                        android:layout_weight=".3"
                        android:paddingLeft="10dp"
                        android:gravity="bottom"
                        android:textSize="10sp" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:hint="@string/insert"
                        android:id="@+id/office_address_area"
                        android:scrollHorizontally="true"
                        android:layout_weight=".7"
                        android:textColor="#ff000000"
                        android:textSize="15dp"
                        android:paddingLeft="10dp"
                        android:background="#00000000"
                        android:backgroundTint="@color/blue_semi_transparent"
                        android:textCursorDrawable="@drawable/edit_cursor"
                        android:paddingTop="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".4"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/string_company_fragment_cap"
                        android:textColor="@color/ColorPrimaryDark"
                        android:id="@+id/office_cap_title"
                        android:layout_weight=".3"
                        android:paddingLeft="10dp"
                        android:gravity="bottom"
                        android:textSize="10sp" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:hint="@string/insert"
                        android:id="@+id/office_CAP_area"
                        android:scrollHorizontally="true"
                        android:layout_weight=".7"
                        android:textColor="#ff000000"
                        android:backgroundTint="@color/blue_semi_transparent"
                        android:textCursorDrawable="@drawable/edit_cursor"
                        android:textSize="15dp"
                        android:background="#00000000"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp" />

                </LinearLayout>


            </LinearLayout>

            <!-- END Address and cap -->


            <!-- City and Nation -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cityIcon"
                    android:src="@drawable/ic_world"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".6"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/string_company_fragment_city"
                        android:textColor="@color/ColorPrimaryDark"
                        android:id="@+id/office_city_title"
                        android:layout_weight=".3"
                        android:paddingLeft="10dp"
                        android:gravity="bottom"
                        android:textSize="10sp" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:hint="@string/insert"
                        android:id="@+id/office_city_area"
                        android:scrollHorizontally="true"
                        android:layout_weight=".7"
                        android:textColor="#ff000000"
                        android:background="#00000000"
                        android:backgroundTint="@color/blue_semi_transparent"
                        android:textCursorDrawable="@drawable/edit_cursor"
                        android:textSize="15dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".4"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/string_company_fragment_nation"
                        android:textColor="@color/ColorPrimaryDark"
                        android:id="@+id/office_nation_title"
                        android:layout_weight=".3"
                        android:paddingLeft="10dp"
                        android:gravity="bottom"
                        android:textSize="10sp" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:hint="@string/insert"
                        android:id="@+id/office_nation_area"
                        android:scrollHorizontally="true"
                        android:layout_weight=".7"
                        android:textColor="#ff000000"
                        android:background="#00000000"
                        android:backgroundTint="@color/blue_semi_transparent"
                        android:textCursorDrawable="@drawable/edit_cursor"
                        android:textSize="15dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp" />

                </LinearLayout>


            </LinearLayout>

            <!-- END City and Nation -->

            <!-- Office type and delete button -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/officeTypeIcon"
                    android:src="@drawable/ic_building"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".6"
                    android:paddingLeft="10dp">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/string_company_fragment_office_type"
                        android:textColor="@color/ColorPrimaryDark"
                        android:id="@+id/office_type_title"
                        android:layout_weight=".3"
                        android:paddingLeft="10dp"
                        android:gravity="bottom"
                        android:textSize="10sp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight=".7"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/office_management_spinnerType" />
                    />

                </LinearLayout>

                <Button
                    android:id="@+id/office_management_delete_button"
                    android:gravity="bottom"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_waste"/>


            </LinearLayout>

            <!--END Office type and delete button-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:id="@+id/office_map_container">

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    class="com.example.giuliagigi.jobplacement.GeoLocalization"
                    android:id="@+id/office_map_fragment"/>

                </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>