<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_new_offer"
    tools:context="com.example.giuliagigi.jobplacement.NewOffer">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/OfferScrollView"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="80dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rowIcon"
                    android:paddingLeft="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_objectoffer"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingLeft="5dp">



                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Object Offer *"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:gravity="bottom"
                        android:textSize="10sp" />

                    '<EditText
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:id="@+id/offerObject"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="@android:color/white"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/new_offer_fragment_hint_object"
                        android:paddingLeft="30dp" />

                </LinearLayout>

            </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowIcon1"
            android:paddingLeft="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_field"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp">



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Work field*"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:gravity="bottom"
                android:textSize="10sp" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/fieldOffer"
                android:layout_weight="1.2"
                 android:paddingLeft="30dp" />



        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowIcon2"
            android:paddingLeft="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_places"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp">



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Available places*"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:paddingBottom="5dp"
                android:gravity="bottom"
                android:textSize="10sp" />


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/offerAvailability"
                android:layout_weight="1"
                android:backgroundTint="#ffffffff"
                android:hint="@string/new_offer_fragment_hint_number_of_place"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@null"
                android:layout_margin="1dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="30dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="80dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowIcon3"
        android:paddingLeft="16dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_validity"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingLeft="5dp">



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Expiring Date*"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:gravity="bottom"
            android:textSize="10sp" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/validity_tv"
                android:layout_weight="1"
                android:hint="@string/new_offer_fragment_hint_validity"
                android:phoneNumber="false"
                android:layout_marginTop="5dp"
                android:paddingLeft="30dp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/new_offer_fragment_date"
                android:id="@+id/dateButton"
                android:layout_weight="0.5" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="30dp"></RelativeLayout>


    </LinearLayout>

</LinearLayout>


    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="80dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowIcon4"
        android:paddingLeft="16dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_contract"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingLeft="5dp">



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/new_offer_fragment_hint_spinnercontract"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:gravity="bottom"
            android:textSize="10sp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/typeContract"
            android:layout_weight="1.2"
            android:layout_margin="1dp"
            android:paddingLeft="30dp"/>



    </LinearLayout>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowIcon5"
            android:paddingLeft="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_term"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp">



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Choose a term for this contract"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:gravity="bottom"
                android:textSize="10sp" />


            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/spinnerDuration"
                android:layout_weight="1.2"
                android:paddingLeft="30dp"/>


        </LinearLayout>

    </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="30dp"></RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="100dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowIcon6"
            android:paddingLeft="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_location"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp">



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Location"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:gravity="bottom"
                android:textSize="10sp" />


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/offerLocation"
                android:layout_weight="1"
                android:hint="@string/new_offer_fragment_hint_location"
                android:backgroundTint="@android:color/white"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@null"
                android:layout_margin="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="30dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowIcon7"
            android:paddingLeft="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_salary"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp">



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Salary"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:gravity="bottom"
                android:textSize="10sp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:orientation="horizontal">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/spinnerSalary"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@android:color/darker_gray"></RelativeLayout>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:inputType="number"
                    android:id="@+id/offerSalary"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/new_offer_fragment_hint_salary"
                    android:backgroundTint="@android:color/white"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_margin="1dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp" />


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="30dp"></RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/new_offer_fragment_Description"
                android:id="@+id/newOffer_tv3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp" />




            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CardDescription"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                card_view:cardCornerRadius="4dp">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/DescriptionText"
                        android:hint="Description up to 500 words"
                        android:gravity="top"
                        android:maxLength="500"
                        android:background="@null"
                        android:backgroundTint="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/countCharacter"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp" />

                </FrameLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_AddTag"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                card_view:cardCornerRadius="4dp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                    <MultiAutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:hint="@string/new_offer_fragment_hint_tags"
                        android:id="@+id/tagAutoComplete_tv"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="@android:color/white"
                        android:lines="1"
                        android:singleLine="true"/>

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/addTagButton"
                        android:layout_weight="0.25"
                        android:background="@android:color/darker_gray"
                        android:src="@drawable/ic_plus_white" />


                </LinearLayout>



            </android.support.v7.widget.CardView>

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:columnCount="3"
                android:id="@+id/tagContainder"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"></GridLayout>>

        </LinearLayout>
    </ScrollView>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|bottom"
        fab:fab_addButtonColorNormal="@color/ColorPrimary"
        fab:fab_addButtonColorPressed="@color/ColorPrimaryDark"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="@string/new_offer_view_button"
            fab:fab_colorNormal="@color/ColorPrimary"
            fab:fab_colorPressed="@color/ColorPrimaryDark"/>



        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="@string/new_offer_publish_button"
            fab:fab_colorNormal="@color/ColorPrimary"
            fab:fab_colorPressed="@color/ColorPrimaryDark"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="@string/new_offer_modify_button"
            fab:fab_colorNormal="@color/ColorPrimary"
            fab:fab_colorPressed="@color/ColorPrimaryDark"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="@string/new_offer_delete_button"
            fab:fab_colorNormal="@color/ColorPrimary"
            fab:fab_colorPressed="@color/ColorPrimaryDark"/>




    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</FrameLayout>
</LinearLayout>
