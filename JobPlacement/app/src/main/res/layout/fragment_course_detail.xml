<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.giuliagigi.jobplacement.CourseDetailFragment">

    <TextView
        android:id="@+id/course_code_textView"
        android:layout_width="fill_parent"
        android:text="code"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/course_name_textView"
        android:layout_width="fill_parent"
        android:text="name"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/course_professor_textView"
        android:layout_width="fill_parent"
        android:text="professor"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/course_lecture_listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        </ListView>

</LinearLayout>
