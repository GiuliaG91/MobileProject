<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tabsColor"
    tools:context="com.example.giuliagigi.jobplacement.CourseDetailFragment">

    <TextView
        android:id="@+id/course_code_textView"
        android:layout_width="wrap_content"
        android:textColor="@color/ColorPrimaryDark"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:text="code"
        android:textSize="@dimen/editText_textSize"
        android:layout_height="wrap_content" />

   <TextView
        android:id="@+id/course_name_textView"
        android:layout_width="wrap_content"
        android:textColor="@color/ColorPrimaryDark"
       android:layout_marginTop="5dp"
       android:layout_marginRight="5dp"
       android:layout_marginLeft="5dp"
        android:text="name"
        android:textSize="@dimen/editText_textSize"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/course_professor_textView"
        android:layout_width="fill_parent"
        android:textColor="@color/ColorPrimaryDark"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:text="professor"
        android:textSize="@dimen/editText_textSize"
        android:layout_height="wrap_content" />



    <ListView
        android:id="@+id/course_lecture_listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        >

        </ListView>

</LinearLayout>
