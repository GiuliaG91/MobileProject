<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.giuliagigi.jobplacement.ProfileManagementAccountFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_changeuser"
            android:layout_gravity="center"
            android:paddingRight="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_account_change_username"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_background"
            android:textColor="@color/ColorPrimaryDark"
            android:id="@+id/account_changeUsername_button"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_changepass"
            android:layout_gravity="center"
            android:paddingRight="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_account_change_password"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_background"
            android:textColor="@color/ColorPrimaryDark"
            android:id="@+id/account_changePassword_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sendemail"
            android:layout_gravity="center"
            android:paddingRight="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_background"
            android:textColor="@color/ColorPrimaryDark"
            android:text="@string/string_account_resend_mail"
            android:id="@+id/account_sendVerification_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_waste"
            android:layout_gravity="center"
            android:paddingRight="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/string_account_delete"
            android:background="@drawable/button_background"
            android:textColor="@color/ColorPrimaryDark"
            android:id="@+id/account_deleteAccount_button" />

    </LinearLayout>


</LinearLayout>
