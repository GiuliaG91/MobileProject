<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/lecture_item_background"
    android:layout_margin="5sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LECTURE_standard_title"
        android:textSize="@dimen/LECTUREITEM_Title_textSize"
        android:textColor="@color/ColorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/LECTUREITEM_textView_courseName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LECTURE_standard_day_schedule"
        android:textSize="@dimen/LECTUREITEM_textSize"
        android:textColor="@color/ColorPrimaryDark"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/LECTUREITEM_textView_schedule" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LECTURE_standard_room"
        android:textSize="@dimen/LECTUREITEM_textSize"
        android:textColor="@color/ColorPrimaryDark"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/LECTUREITEM_textView_Room" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LECTURE_standard_Professor"
        android:textSize="@dimen/LECTUREITEM_textSize"
        android:textColor="@color/ColorPrimaryDark"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/LECTUREITEM_textView_Professor" />

</LinearLayout>