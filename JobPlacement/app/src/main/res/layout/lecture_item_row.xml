<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/lecture_item_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/lecture_day_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/lecture_room_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/lecture_startHour_editText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text=":"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/lecture_startMinute_editText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="-"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/lecture_endHour_editText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text=":"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/lecture_endMinute_editText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            </LinearLayout>



        <Button
            android:id="@+id/lecture_modify_button"
            android:layout_width="fill_parent"
            android:text="@string/modify"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/lecture_delete_button"
            android:text="delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        </LinearLayout>


</android.support.v7.widget.CardView>