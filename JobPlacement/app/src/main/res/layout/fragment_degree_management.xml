<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degree_border"
    android:orientation="vertical"
    android:alpha="1"
    tools:context="com.example.giuliagigi.jobplacement.StudentProfileManagementDegreeFragment">

    <!-- <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="5dp"
        card_view:cardBackgroundColor="#ffffff"> -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <!--Degree type and field-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/degreeIcon"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_degree"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".5"
                    android:paddingLeft="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5"
                        android:id="@+id/degree_management_spinnerType" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".5"
                    android:paddingLeft="10dp">

                   <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5"
                        android:id="@+id/degree_management_spinnerField" />

                </LinearLayout>



            </LinearLayout>

            <!--END Degree type and field-->


            <!--Degree mark and loud-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/markIcon"
                    android:src="@drawable/ic_mark"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/string_degree_fragment_degree_mark_title"
                        android:id="@+id/degree_text_view_mark"
                        android:layout_weight=".3"
                        android:paddingLeft="10dp"
                        android:gravity="bottom"
                        android:textSize="10sp" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:id="@+id/degree_management_mark_area"
                        android:layout_weight=".7"
                        android:textColor="#ff000000"
                        android:background="#00000000"
                        android:backgroundTint="@color/blue_semi_transparent"
                        android:textCursorDrawable="@drawable/edittext_cursor"
                        android:textSize="15dp"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/string_degree_fragment_degree_loud_title"
                        android:id="@+id/degree_loud_area"
                        android:layout_weight=".3"
                        android:paddingLeft="10dp"
                        android:gravity="bottom"
                        android:textSize="10sp" />

                    <Switch
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".7"
                        android:id="@+id/degree_management_loud_switch"
                        android:showText="true"
                        android:layout_marginRight="20dp"
                        android:textOn="Yes"
                        android:textOff="No"
                        />

                </LinearLayout>


            </LinearLayout>


            <!--END Degree mark and loud-->

            <!-- Degree date -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/degreeDateIcon"
                    android:src="@drawable/ic_calendar"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/string_degree_fragment_degree_date_title"
                        android:id="@+id/degree_date_area"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:gravity="bottom"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:id="@+id/degree_management_datePicker" />
                    />

                </LinearLayout>

                <Button
                    android:id="@+id/degree_management_delete_button"
                    android:gravity="bottom"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_waste"/>


            </LinearLayout>

             <!--END Degree date-->





        </LinearLayout>

  <!-- </android.support.v7.widget.CardView> -->

</LinearLayout>
