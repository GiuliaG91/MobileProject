<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.giuliagigi.jobplacement.MailBoxNewFragment">

    <EditText
        android:id="@+id/recipients_list_new_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:hint="@string/recipients"/>

    <EditText
        android:id="@+id/object_new_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:hint="@string/object:"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="5dp"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="#ffffff">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/body_new_message"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textColor="#000000"
                android:textSize="15sp"
                android:gravity="top"
                android:background="#00000000"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="vertical"/>

        </ScrollView>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/send_new_message_btn"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/send"
        android:background="#2196F3"
        android:textColor="#FFFFFF"/>


</LinearLayout>
