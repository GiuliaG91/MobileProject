<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.giuliagigi.jobplacement.Registration">

    <FrameLayout
        android:id="@+id/container_type_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/type_list"
            android:layout_gravity="top" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_register_fragment"
        android:layout_weight="0.5" />

    <FrameLayout
        android:id="@+id/container_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/registration_register"
            android:background="@drawable/button_background"
            android:textColor="@color/ColorPrimaryDark"
            android:id="@+id/register_button"/>

    </FrameLayout>


</LinearLayout>
