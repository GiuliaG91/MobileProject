<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--
        <TextView
            android:id="@+id/object_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object"
            android:textSize="18sp"
            android:textStyle="bold"/>
            -->

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            card_view:cardMaxElevation="5dp"
            android:layout_margin="3dp"
            android:background="@color/tabsColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <!--
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_attach_file_white_24dp"
                    android:layout_gravity="top"/>
                -->

                <ImageView
                    android:id="@+id/sender_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_profile"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="7dp"
                    />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sender"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/ColorPrimary"
                            android:layout_gravity="bottom"
                            />

                        <TextView
                            android:id="@+id/sender_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="nome"
                            android:textSize="16sp"
                            android:layout_marginLeft="7dp"
                            android:textColor="@color/black_light_transparent"
                            android:layout_gravity="bottom"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/recipient"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/ColorPrimary"
                            />

                        <Spinner
                            android:id="@+id/recipients_list"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="7dp"
                            android:background="@color/header_detail_mail_box"
                            android:layout_gravity="bottom"
                            android:textColor="@color/black_light_transparent"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:textColor="@color/ColorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="bottom"
                            />

                        <TextView
                            android:id="@+id/date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 maggio ..."
                            android:textColor="@color/black_light_transparent"
                            android:textSize="16sp"
                            android:layout_marginLeft="7dp"
                            android:layout_gravity="bottom"
                            />

                    </TableRow>

                </TableLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="10dp"
            card_view:cardMaxElevation="5dp"
            android:layout_margin="3dp"
            card_view:cardBackgroundColor="#ffffff">

            <TextView
                android:id="@+id/body_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black_light_transparent"
                android:textSize="15sp"
                android:background="#00000000"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="vertical"
                />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions_mailbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|bottom"
        fab:fab_addButtonColorNormal="@color/ColorPrimary"
        fab:fab_addButtonColorPressed="@color/ColorPrimaryDark"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_respond_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/ColorPrimary"
            fab:fab_title="@string/reply_to_sender"
            fab:fab_colorPressed="@color/ColorPrimaryDark"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_respond_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/ColorPrimary"
            fab:fab_title="@string/reply_to_all"
            fab:fab_colorPressed="@color/ColorPrimaryDark"/>


    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</FrameLayout>
