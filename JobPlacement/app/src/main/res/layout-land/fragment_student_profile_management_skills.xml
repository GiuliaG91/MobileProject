<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_student__profile_management_skills"
    tools:context="com.example.giuliagigi.jobplacement.StudentProfileManagementSkillsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tabsColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical">
            <!--Upload cv -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/curriculum_card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                card_view:cardMaxElevation="5dp"
                android:layout_margin="3dp"
                card_view:cardBackgroundColor="#ffffff">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".9"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/ColorPrimaryDark"
                                android:layout_weight=".4"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="@string/profile_student_cv"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/student_cv_name"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/ColorPrimaryDark"
                                android:layout_weight=".3"
                                android:layout_marginLeft="10dp"
                                android:padding="5dp"
                                android:text="@string/profile_student_upload_cv"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/student_cv_pdf"
                                android:textColor="@color/ColorPrimaryDark"
                                android:textSize="9dp"
                                android:layout_weight=".3"
                                android:layout_marginLeft="10dp"
                                android:padding="5dp"
                                android:text="@string/profile_student_cv_only_pdf"
                                />
                        </LinearLayout>
                        <Button
                            android:id="@+id/skills_down_upload_cv"
                            android:gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_upload"/>


                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- end upload -->

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/languages_card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                card_view:cardMaxElevation="5dp"
                android:layout_margin="3dp"
                card_view:cardBackgroundColor="#ffffff">

                <!--Languages -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/ColorPrimaryDark"
                            android:layout_weight=".9"
                            android:padding="10dp"
                            android:text="@string/profile_student_fragment_languages"
                            />

                        <Button
                            android:id="@+id/skills_add_language"
                            android:gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:background="@drawable/ic_plus"/>


                    </LinearLayout>

                        <LinearLayout
                            android:id="@+id/student_languageList_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <ListView
                                android:id="@+id/skills_language_listview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </ListView>

                        </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
                <!-- end languages -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical">
                <!-- degrees -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/degrees_card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                card_view:cardMaxElevation="5dp"
                android:layout_margin="3dp"
                card_view:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_weight=".9"
                            android:padding="10dp"
                            android:text="@string/profile_student_fragment_degrees"
                            android:textColor="@color/ColorPrimaryDark"
                            />

                        <Button
                            android:id="@+id/skills_add_degree"
                            android:gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:background="@drawable/ic_plus"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/student_degreeList_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ListView
                            android:id="@+id/skills_degree_listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </ListView>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

                <!-- end degrees -->


            <!-- degrees -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/certificates_card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                card_view:cardMaxElevation="5dp"
                android:layout_margin="3dp"
                card_view:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_weight=".9"
                            android:padding="10dp"
                            android:text="@string/string_certificate_fragment_area"
                            android:textColor="@color/ColorPrimaryDark"
                            />

                        <Button
                            android:id="@+id/skills_add_certificate"
                            android:gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:background="@drawable/ic_plus"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/student_certificateList_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ListView
                            android:id="@+id/skills_certificate_listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </ListView>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
        </LinearLayout>
    </ScrollView>



</FrameLayout>
