<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_message"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_mail_box"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <CheckBox
                android:id="@+id/delete_message"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ccc"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_vertical"/>

            <CheckBox
                android:id="@+id/star_message"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ccc"
                android:clickable="true"
                android:focusable="true"
                android:button="@drawable/star"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="From:"
                        android:gravity="bottom"
                        android:textColor="#ff000000"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Sender"
                        android:id="@+id/sender"
                        android:gravity="bottom"
                        android:textColor="#ff000000"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="To:"
                        android:gravity="bottom"
                        android:textColor="#ff000000"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Recipients"
                        android:id="@+id/recipients_list"
                        android:gravity="bottom"
                        android:textColor="#ff000000"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:text="Object"
                android:textStyle="italic"
                android:id="@+id/object_message"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:paddingBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00:00"
                android:id="@+id/date_message"
                android:layout_weight="0.1"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>